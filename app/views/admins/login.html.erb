<h1>Admin Login</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with(url: login_admins_path, method: :post) do |form| %>
    <%= form.label :username %>
    <%= form.text_field :username %><br>
  
    <%= form.label :password %>
    <%= form.password_field :password %><br>
  
    <%= form.submit "Login" %>
  <% end %>
